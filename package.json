{
  "name": "gh-labeler",
  "version": "0.1.1",
  "description": "A fast and reliable GitHub repository label management tool built with Rust",
  "main": "index.js",
  "bin": {
    "gh-labeler": "./bin/gh-labeler"
  },
  "keywords": [
    "github",
    "labels",
    "sync",
    "cli",
    "rust",
    "automation"
  ],
  "author": "Keisuke Hayashi <hi@kkhys.me>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kkhys/gh-labeler.git"
  },
  "bugs": {
    "url": "https://github.com/kkhys/gh-labeler/issues"
  },
  "homepage": "https://github.com/kkhys/gh-labeler#readme",
  "files": [
    "bin/gh-labeler",
    "scripts/post-install.js",
    "README.md",
    "LICENSE.md"
  ],
  "engines": {
    "node": ">=12"
  },
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "cpu": [
    "x64",
    "arm64"
  ],
  "preferGlobal": true,
  "scripts": {
    "preinstall": "npm run build",
    "build": "cargo build --release",
    "build:ts": "tsc scripts/post-install.ts --outDir scripts --target ES2022 --module CommonJS --moduleResolution node",
    "test": "cargo test",
    "prepare": "npm run build:ts && cargo build --release && cp target/release/gh-labeler bin/gh-labeler",
    "postinstall": "node scripts/post-install.js",
    "lint": "biome check .",
    "lint:fix": "biome check --write ."
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.3",
    "@types/node": "24.3.1",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "volta": {
    "node": "22.19.0"
  }
}
